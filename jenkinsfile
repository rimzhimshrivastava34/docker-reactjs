pipeline {
    agent any

    environment {
        IMAGE_NAME = 'rimzhimshri/react-app'
        DOCKER_CREDENTIALS_ID = 'docker-hub'
        TAG = "${BUILD_NUMBER}"
    }

    stages {
        stage('Clone from GitHub') {
            steps {
                git credentialsId: 'devops', url: 'https://github.com/rimzhimshrivastava34/docker-reactjs.git', branch: 'master'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    dockerImage = docker.build("${IMAGE_NAME}:${TAG}")
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', "${DOCKER_CREDENTIALS_ID}") {
                        dockerImage.push()
                        dockerImage.push("latest")
                    }
                }
            }
        }

        stage('Deploy with Docker Compose') {
            steps {
                script {
                    sh """
                        echo "ü™Ñ Exporting image tag: ${TAG}"
                        export TAG=${TAG}

                        echo "üßπ Stopping old container (if any)..."
                        docker-compose down || true

                        echo "üöÄ Deploying with Docker Compose using tag \$TAG..."
                        docker-compose up -d --build
                    """
                }
            }
        }
    }

    post {
        success {
            echo "‚úÖ Deployment successful with image tag ${TAG}!"
        }
        failure {
            echo '‚ùå Build or Deployment failed.'
        }
    }
}
